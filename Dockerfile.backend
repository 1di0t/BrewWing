FROM python:3.10-slim

ENV DJANGO_SETTINGS_MODULE=brewing.settings

# 작업 디렉토리 설정
WORKDIR /app

# 종속성 파일 복사 후 설치
COPY requirements.txt .
RUN pip install --upgrade pip && pip install -r requirements.txt

# 소스 코드 복사
COPY brewing ./brewing

# 포트 개방
EXPOSE 8080

# 서버 실행
CMD ["sh", "-c", "exec gunicorn brewing.wsgi:application --bind 0.0.0.0:${PORT:-8080} --workers 3"]


